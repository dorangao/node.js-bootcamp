<!doctype html>
<html>
<head>
    <title>Social Authenticator</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body { padding-top:80px; word-wrap:break-word; }
        a.fa, a.fa:visited, a.fa:hover, a.fa:active { color: inherit; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-share-square-o"></span> Share</h1>
        <a href="/compose" class="btn btn-default btn-sm">
            <i class="fa fa-pencil-square-o"></i>&nbsp;&nbsp;&nbsp;Compose
        </a>
        <a href="/timeline" class="btn btn-default btn-sm">Timeline</a>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a><br><br>
    </div>

    <% if (typeof message !== 'undefined' && message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <div class="row well">

        <div class="col-xs-1">
            <img src="<%= post.image %>"/>
        </div>
        <div class="col-lg-11">
            <div class="row">
                <p>
                    <strong><%= post.name %></strong> <%= post.username %><br>
                    <%- post.text %>
                </p>
            </div>
        </div>

    </div>

    <div class="row">
        <form action="/share/<%= post.id %>" method="POST">
            <div class="form-group">
                <textarea name="share" class="form-control" rows="3" placeholder="Add a personal message..."></textarea>
            </div>
            <button type="submit" class="btn btn-default">Forward</button>
        </form>
    </div>
</div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script>
    $(function() {
        $('._like').click(function() {
            var $this = $(this)
            var id = $this.attr('name').replace('like', '')
            $this.toggleClass('fa-thumbs-o-up')
            $this.toggleClass('fa-thumbs-up')
            if ($this.hasClass('fa-thumbs-up')) {
                $.post('like/' + id)
            } else {
                $.post('unlike/' + id)
            }
        })
    })
</script>
</html>